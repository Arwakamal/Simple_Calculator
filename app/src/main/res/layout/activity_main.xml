<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background"
    android:baselineAligned="false"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="30dp"
        android:background="@color/io_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inputTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="30sp"
            />


        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/green"
            android:layout_gravity="end"
            android:textSize="30sp"
            />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clear_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="@string/c"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/left_parenthesis_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="@string/left_parenthesis"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/right_parenthesis_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="@string/right_parenthesis"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/division_sign_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="@string/division_sign"/>

        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="7"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="8"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="9"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/times_sign_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="×"/>

        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="5"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="6"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus_sign_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="−"/>

        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addition_sign_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="+"/>

        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="0"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dot_bt"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Button_Style"
                android:text="."/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/equal_bt"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:onClick="equal"
                style="@style/Button_Style"
                android:background="@color/green"
                android:text="="/>



        </TableRow>

    </TableLayout>

</LinearLayout>